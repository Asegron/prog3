<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@firstview.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.htwsaar.hopper.ui.RevampFirstViewController">
   <top>
      <HBox prefHeight="21.0" prefWidth="600.0" styleClass="title-bar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="title-bar-text" text="Autovermietung">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <GridPane alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox onMouseClicked="#switchToCarRental" prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 5px;" styleClass="menu-tile">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@smile.jpg" />
                     </image></ImageView>
                  <Label styleClass="menu-tile-text" text="Autoverwaltung" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="menu-tile" GridPane.columnIndex="1">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@smile.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="menu-tile-text" stylesheets="@firstview.css" text="Kundenverwaltung" />
               </children></VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="menu-tile" GridPane.rowIndex="1">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@smile.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="menu-tile-text" text="Buchungsverwaltung" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="menu-tile" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@smile.jpg" />
                     </image></ImageView>
                  <Label styleClass="menu-tile-text" text="Hilfe" />
               </children></VBox>
         </children>
      </GridPane>
   </center>
</BorderPane>
